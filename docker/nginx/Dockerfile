FROM nginx
ARG ASTRO_API_DOMAIN
ARG PMS_API_DOMAIN
ARG VMS_API_DOMAIN
ARG CREWING_API_DOMAIN
ARG PURCHASING_API_DOMAIN
ARG ASTRO_APP_DOMAIN
ARG PMS_APP_DOMAIN
ARG VMS_APP_DOMAIN
ARG CREWING_APP_DOMAIN
ARG PURCHASING_APP_DOMAIN
ARG ASTRO_BE_DEST_DIR
ARG PMS_BE_DEST_DIR
ARG VMS_BE_DEST_DIR
ARG CREWING_BE_DEST_DIR
ARG PURCHASING_BE_DEST_DIR
ARG ASTRO_FE_DEST_DIR
ARG PMS_FE_DEST_DIR
ARG VMS_FE_DEST_DIR
ARG CREWING_FE_DEST_DIR
ARG PURCHASING_FE_DEST_DIR
ADD ./docker/nginx/scripts/configure.sh /configure.sh
ADD ./docker/nginx/default.conf /etc/nginx/conf.d/default.conf
RUN ["chmod", "+x", "/configure.sh"]
RUN /configure.sh
